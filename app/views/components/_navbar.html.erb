<div class="navbar bg-black">
  <div class="mt-2 mb-4 ml-3"><%= link_to cl_image_tag("cocktail_ggegm6.jpg", width: 50, gravity: :face, crop: :thumb), cocktails_path %></div>
  <div class="form-inline mb-4">
    <%= form_tag cocktails_path, method: :get do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Search"
      %>
      <%= button_tag type:"submit", class:"btn btn-default btn-sm" do %>
        <i class="fa fa-search text-primary fa-lg"></i>
      <% end %>
    <% end %>
  </div>

  <div class="mt-2 mb-4 mr-3"><%= link_to 'add a cocktail', new_cocktail_path, class: 'btn btn-primary mx-2 my-2' %> </div>
</div>
